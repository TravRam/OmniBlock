<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:key="blackList_update"
        android:title="@string/pref_list_update_name"
        android:summary="Insert Address to block Ads"
        android:dialogTitle="Insert Address to block Ads"
        android:defaultValue="@string/pref_list_default_name"
        android:selectAllOnFocus="true"
        android:inputType="textCapWords"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />
    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->
    <EditTextPreference
        android:key="blackList_remove"
        android:title="@string/pref_list_remove_name"
        android:summary="Insert Address to remove from Blacklist"
        android:dialogTitle="Insert Address to remove from Blacklist"
        android:defaultValue="@string/pref_list_default_remove"
        android:selectAllOnFocus="true"
        android:inputType="textCapWords"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />



    <Preference
        android:key="view_blackList"
        android:title="@string/pref_view_blacklist" />
    <!-- NOTE: Hide buttons to simplify the UI. Users can touch outside the dialog to
         dismiss it. -->
    <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->


</PreferenceScreen>
