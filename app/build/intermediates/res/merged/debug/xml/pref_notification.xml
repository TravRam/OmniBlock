<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- A 'parent' preference, which enables/disables child preferences (below)
         when checked/unchecked. -->


    <!-- Allows the user to choose a ringtone in the 'notification' category. -->
    <!-- NOTE: This preference will be enabled only when the checkbox above is checked. -->
    <!-- NOTE: RingtonePreference's summary should be set to its value by the activity code. -->


    <!-- NOTE: This preference will be enabled only when the checkbox above is checked. -->
    <EditTextPreference
        android:key="whiteList_update"
        android:title="@string/pref_list_update_name2"
        android:summary="Insert Address to allow Ads"
        android:dialogTitle="Insert Address to allow Ads"
        android:defaultValue="@string/pref_list_default_name2"
        android:selectAllOnFocus="true"
        android:inputType="textCapWords"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />
    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->
    <EditTextPreference
        android:key="whiteList_remove"
        android:title="@string/pref_list_remove_name2"
        android:summary="Insert Address to remove from Whitelist"
        android:dialogTitle="Insert Address to remove from Whitelist"
        android:defaultValue="@string/pref_list_default_remove2"
        android:selectAllOnFocus="true"
        android:inputType="textCapWords"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />

    <Preference
        android:key="view_whiteList"
        android:title="@string/pref_view_whitlelist" />

</PreferenceScreen>
